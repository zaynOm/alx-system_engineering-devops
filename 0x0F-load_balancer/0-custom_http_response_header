#!/usr/bin/env bash
# Configure Nginx so that its HTTP response contains a custom header
apt-get -y update
apt-get -y install nginx
config="/etc/nginx/sites-available/default"
echo 'Hello World!' > /var/www/html/index.html
sed -i '/^}$/i \ \n\tlocation \/redirect_me {return 301 https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4;}' $config
sed -i '/^}$/i \ \n\tlocation @404 {return 404 "Ceci n'\''est pas une page\\n";}' $config
sudo sed -i 's/=404/@404/g' $config
sudo sed -i "0,/location \/ {/s/location \/ {/&\n\t\tadd_header X-Served-By '$HOSTNAME';/" $config
sudo service nginx restart
